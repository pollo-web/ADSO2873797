@model IEnumerable<ProyectoFinal.Models.Usuarios>

@{
    ViewBag.Title = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #1E1E2C;
        color: #EAEAEA;
        font-family: 'Roboto', 'Arial', sans-serif;
    }

    .dashboard-container {
        background-color: #252836;
        max-width: 900px;
        margin: 40px auto;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 30px;
        color: #D84B6A;
        border-bottom: 2px solid #3B3B4F;
        padding-bottom: 15px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 1em;
        text-align: left;
    }

        .table th, .table td {
            padding: 12px 15px;
            border: 1px solid #3B3B4F;
        }

        .table th {
            background-color: #3B3B4F;
            color: #FFD369;
        }

        .table td {
            background-color: #252836;
            color: #EAEAEA;
        }

        .table a {
            color: #D84B6A;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s;
        }

            .table a:hover {
                color: #FFD369;
            }

    .btn-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

    .btn-create {
        background-color: #D84B6A;
        color: #EAEAEA;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-create:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(216, 75, 106, 0.3);
        }

    .btn-back {
        margin-top: 20px;
        display: inline-block;
        background-color: #3B3B4F;
        color: #EAEAEA;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(255, 211, 105, 0.3);
        }
</style>

<div class="dashboard-container">
    <h1 class="dashboard-header">Lista de Usuarios</h1>

    <div class="btn-container">
        <a href="@Url.Action("Create", "Usuarios")" class="btn-create">Crear Nuevo</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Usuario)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                    <td>
                        <a href="@Url.Action("Edit", "Usuarios", new { id = item.Id })">Editar</a> |
                        <a href="@Url.Action("Details", "Usuarios", new { id = item.Id })">Detalles</a> |
                        <a href="@Url.Action("Delete", "Usuarios", new { id = item.Id })">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Index", "Home")" class="btn-back">Volver al Menú</a>
</div>

