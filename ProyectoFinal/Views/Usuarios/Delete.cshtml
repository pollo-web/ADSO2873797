@model ProyectoFinal.Models.Usuarios

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #1E1E2C;
        color: #EAEAEA;
        font-family: 'Roboto', 'Arial', sans-serif;
    }

    .dashboard-container {
        background-color: #252836;
        max-width: 600px;
        margin: 40px auto;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 30px;
        color: #D84B6A;
        border-bottom: 2px solid #3B3B4F;
        padding-bottom: 15px;
    }

    .dashboard-description {
        color: #A6A6A6;
        text-align: center;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .security-stats {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 30px;
        background-color: #3B3B4F;
        padding: 20px;
        border-radius: 8px;
    }

    .stat-item {
        text-align: center;
        color: #EAEAEA;
    }

    .stat-value {
        font-size: 1.2em;
        color: #FFD369;
        font-weight: bold;
    }

    .btn-management {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn-users, .btn-personas {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        border: none;
        color: #EAEAEA;
        background-color: #3B3B4F;
        padding: 12px 25px;
        border-radius: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
    }

        .btn-users:hover, .btn-personas:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(216, 75, 106, 0.3);
        }

    .btn-users {
        background-color: #D84B6A;
    }

    .btn-personas {
        background-color: #3B3B4F;
    }
</style>

<div class="dashboard-container">
    <h1 class="dashboard-header">Eliminar Usuario</h1>

    <p class="dashboard-description">
        ¿Está seguro de que desea eliminar este usuario? Esta acción no se puede deshacer.
    </p>

    <div class="security-stats">
        <div class="stat-item">
            <span class="stat-value">Usuario:</span>
            @Html.DisplayFor(model => model.Usuario)
        </div>
        <div class="stat-item">
            <span class="stat-value">Contraseña:</span>
            @Html.DisplayFor(model => model.Pass)
        </div>
        <div class="stat-item">
            <span class="stat-value">Fecha de Creación:</span>
            @Html.DisplayFor(model => model.FechaCreacion)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="btn-management">
            <input type="submit" value="Eliminar" class="btn-users" />
            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn-personas" })
        </div>
    }
</div>
