@{
    ViewBag.Title = "SecureShield Dashboard";
}

<style>
    body {
        background-color: #1E1E2C;
        color: #EAEAEA;
        font-family: 'Roboto', 'Arial', sans-serif;
    }

    .dashboard-container {
        background-color: #252836;
        max-width: 900px;
        margin: 40px auto;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 30px;
        color: #D84B6A;
        border-bottom: 2px solid #3B3B4F;
        padding-bottom: 15px;
    }

    .dashboard-description {
        color: #A6A6A6;
        text-align: center;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .btn-management {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
    }

    .btn-users, .btn-personas {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        border: none;
        color: #EAEAEA;
        background-color: #3B3B4F;
        padding: 12px 25px;
        border-radius: 8px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
    }

        .btn-users:hover, .btn-personas:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(216, 75, 106, 0.3);
        }

        .btn-users::before, .btn-personas::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, #FFD369 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .btn-users:hover::before, .btn-personas:hover::before {
            opacity: 0.2;
        }

    .btn-users {
        background-color: #D84B6A;
    }

    .btn-personas {
        background-color: #3B3B4F;
    }

    .security-stats {
        display: flex;
        justify-content: space-around;
        margin-top: 30px;
        background-color: #3B3B4F;
        padding: 20px;
        border-radius: 8px;
    }

    .stat-item {
        text-align: center;
        color: #EAEAEA;
    }

    .stat-value {
        font-size: 1.5em;
        color: #FFD369;
        font-weight: bold;
    }
</style>

<div class="dashboard-container">
    <h1 class="dashboard-header">SecureShield Solutions</h1>

    <p class="dashboard-description">
        Bienvenido al Centro de Gestión de SecureShield, su plataforma centralizada para administración
        de usuarios y gestión de identidades. Nuestro sistema proporciona herramientas avanzadas de
        control de acceso y seguridad para proteger sus activos digitales más críticos.
    </p>

    <div class="security-stats">
        <div class="stat-item">
            <div class="stat-value">127</div>
            Usuarios Activos
        </div>
        <div class="stat-item">
            <div class="stat-value">99.9%</div>
            Tiempo de Actividad
        </div>
        <div class="stat-item">
            <div class="stat-value">0</div>
            Incidentes Recientes
        </div>
    </div>

    <div class="btn-management">
        <a href="@Url.Action("Index", "Usuarios")" class="btn-users">
            Gestionar Usuarios
        </a>
        <a href="@Url.Action("Index", "Personas")" class="btn-personas">
            Gestionar Personas
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const buttons = document.querySelectorAll('.btn-users, .btn-personas');

        buttons.forEach(button => {
            button.addEventListener('mouseenter', () => {
                button.style.transform = 'translateY(-5px)';
            });

            button.addEventListener('mouseleave', () => {
                button.style.transform = 'translateY(0)';
            });
        });
    });
</script>
